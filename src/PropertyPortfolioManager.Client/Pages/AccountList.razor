@page "/account"


<SectionContent SectionName="top-bar">
    <div class="row">
        <div class="col">
            <div>Accounts</div>
        </div>
        <div class="col">
            @if (ActiveOnly)
            {
                <a @onclick="(() => IncludeInactive(true))">Include Inactive</a>
            }
            else
            {
                <a @onclick="(() => IncludeInactive(false))">Hide Inactive</a>
            }
            <a href="accountedit" class="btn btn-success btn-sm float-end">Create New Account</a>
        </div>
    </div>

</SectionContent>

@if (accounts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="page-content">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    @if (!ActiveOnly)
                    {
                        <th>
                            Active
                        </th>
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in accounts)
                {
                    <tr>
                        <td>
                            @account.AccountName
                        </td>
                        <td>
                            @account.Type
                        </td>
                        @if (!ActiveOnly)
                        {
                            <td>
                                @(account.Active ? "Active" : "Inactive")
                            </td>
                        }
                        <td>
                            @if (account.PortfolioId > -1)
                            {
                                <a href="@($"accountedit/{account.Id}")" class="btn btn-outline-primary btn-sm">
                                    Edit
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
