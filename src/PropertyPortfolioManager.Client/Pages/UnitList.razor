@page "/unit"

<SectionContent SectionName="top-bar">
    <div class="row">
        <div class="col-md">
            <div>Properties</div>
        </div>
        <div class="col-md">
            @if (ActiveOnly)
            {
                <a @onclick="(() => IncludeInactive(true))">Include Inactive</a>
            }
            else
            {
                <a @onclick="(() => IncludeInactive(false))">Hide Inactive</a>
            }
            <a href="unitedit" class="btn btn-success btn-sm float-md-end">New Property</a>
        </div>
    </div>
</SectionContent>

@if (units == null)
{
    <p><em>Loading...</em></p>
}
else
{
        <div class="row">
            @foreach (var unit in units)
            {           
                <ErrorBoundary>
                    <ChildContent>
                        <PropertyCard Property="unit"></PropertyCard>
                    </ChildContent>
                    <ErrorContent>
                        <p class="errorUI">Invalid property!</p>
                    </ErrorContent>
                </ErrorBoundary>

            }
        </div>

}
