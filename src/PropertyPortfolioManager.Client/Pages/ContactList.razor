@page "/contact"

<SectionContent SectionName="top-bar">
    <div>Contacts</div>
</SectionContent>

@if (contacts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col">
            <a href="contactedit">Create New Contact</a>
        </div>
        <div class="col">
            @if (ActiveOnly)
            {
                <a class="float-end" @onclick="(() => IncludeInactive(true))">Include Inactive</a>
            }
            else
            {
                <a class="float-end" @onclick="(() => IncludeInactive(false))">Hide Inactive</a>
            }
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                @if (!ActiveOnly)
                {
                    <th>
                        Active
                    </th>
                }
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in contacts)
            {
                <tr>
                    <td>
                        @contact.Name
                    </td>
                    @if (!ActiveOnly)
                    {
                        <td>
                            @(contact.Active ? "Active" : "Inactive")
                        </td>
                    }
                    <td>
                        <a href="@($"contactedit/{contact.Id}")" class="btn btn-outline-primary btn-sm">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
